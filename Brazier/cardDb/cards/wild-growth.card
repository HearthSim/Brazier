{
    "name": "Wild Growth",
    "description": "Gain an empty Mana Crystal.",
    "class": "druid",
    "type": "spell",
    "manaCost": 2,
    "playActions": {
        "class": "TargetlessActions.doIf",
        "condition": "EntityFilters.isMaxManaCrystals",
        "if": {
            "class": "TargetlessActions.addCard",
            "card": "Excess Mana"
        },
        "else": {
            "class": "TargetlessActions.addManaCrystal",
            "amount": 1
        }
    }
}