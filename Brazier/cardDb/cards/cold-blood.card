{
    "name": "Cold Blood",
    "description": "Give a minion +2 Attack. Combo: +4 Attack instead.",
    "class": "rouge",
    "type": "spell",
    "manaCost": 1,
    "playActions": [
        {
            "targets": "all-minions",
            "requires": "PlayActionRequirements.NO_COMBO",
            "class": "ActorlessTargetedActions.applyToMinionTarget",
            "action": {
                "class": "MinionActions.buffAttack",
                "attack": 2
            }
        },
        {
            "targets": "all-minions",
            "requires": "PlayActionRequirements.COMBO",
            "class": "ActorlessTargetedActions.applyToMinionTarget",
            "action": {
                "class": "MinionActions.buffAttack",
                "attack": 4
            }
        }
    ]
}